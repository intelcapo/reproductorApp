<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".reproductorActivity"
    android:orientation="vertical">

    <!--<TextView
        android:id="@+id/info_app"
        android:text="@string/info_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <ImageView
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:id="@+id/img_grupo"
        android:src="@drawable/rock_band"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <SeekBar
            android:id="@+id/seek_progreso"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_tiempo"
            android:layout_marginTop="20dp"
            android:text="00:00"
            android:textSize="18sp"
            />

    </LinearLayout>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spn_lista_canciones"
        >

    </Spinner>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbl_btns"
        android:stretchColumns="*"
        >

        <TableRow android:layout_width="match_parent"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_play"
                android:src="@drawable/play"
                android:layout_marginTop="10dp"

                android:padding="10dp"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_pause"
                android:src="@drawable/pause"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_stop"
                android:src="@drawable/stop"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

        </TableRow>
        </TableLayout>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_volume"
                android:src="@drawable/volume"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="30dp"
               />

            <SeekBar

                android:id="@+id/sek_volumen"
                android:layout_width="190dp"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>







</LinearLayout>
